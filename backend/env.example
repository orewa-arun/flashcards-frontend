# MongoDB Atlas Connection String
MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

# Database Configuration
DATABASE_NAME=study_analytics

# PostgreSQL Configuration
# Format: postgresql+asyncpg://username:password@host:port/database_name
# Example: postgresql+asyncpg://postgres:postgres@localhost:5432/self_learning_ai
POSTGRES_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/self_learning_ai

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# RAG Backend API URL
RAG_API_BASE_URL=http://localhost:8001

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Configuration
MODEL_ANALYSIS=gemini-2.0-flash-exp
MODEL_FLASHCARDS=claude-3-haiku-20240307
MODEL_QUIZ=gemini-2.0-flash-exp

# Analysis Batching Configuration (for parallel slide processing)
# ANALYSIS_BATCH_SIZE: Number of slides to send in a single API call (default: 5)
# ANALYSIS_MAX_CONCURRENCY: Max parallel API requests (default: 3)
# ANALYSIS_BATCH_DELAY_MS: Delay between batch dispatches in ms (default: 500)
ANALYSIS_BATCH_SIZE=5
ANALYSIS_MAX_CONCURRENCY=3
ANALYSIS_BATCH_DELAY_MS=500

# Cloudflare R2 Configuration (for PDF storage)
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com
CLOUDFLARE_R2_BUCKET_NAME=course-content
